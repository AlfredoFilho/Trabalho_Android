<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobreFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Desenvolvido por:"
            android:textStyle="bold"
            android:textSize="17dp"
            android:padding="10dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_height="150dp"
                    android:src="@drawable/alfredo">

                </ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_height="150dp"
                    android:src="@drawable/cleofas">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Alfredo Albélis"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cléofas Peres"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:layout_marginLeft="45dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="\tProjeto realizado para disciplina Dispositivos Móveis na UNICAMP. Esse aplicativo tem como objetivo fazer a gerência
de vendas e compras de carros."

                    android:textSize="13dp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>