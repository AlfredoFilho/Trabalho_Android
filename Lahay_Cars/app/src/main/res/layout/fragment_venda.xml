<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carros.venda.VendaFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modelo do carro"/>


            <TextView
                android:id="@+id/estilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estilo"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/esportivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="true"
                    android:text="Esportivo" />

                <RadioButton
                    android:id="@+id/conversivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Conversível" />

            </RadioGroup>


            <View
                android:id="@+id/linha"

                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#C9C9C9" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Especificações"
                android:id="@+id/espec"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radioTipo"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/relative1">

                <TextView
                    android:id="@+id/Ano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ano:"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerAno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/Ano"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/anoCarro" />

                <TextView
                    android:id="@+id/cor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cor:"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/spinnerAno"/>

                <Spinner
                    android:id="@+id/spinnerCor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cor"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/corCarro" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative1"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/Cambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambio:"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <!-- <Spinner
                      android:id="@+id/spinnerCambio"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@id/Cambio"
                      android:drawSelectorOnTop="true"
                      android:entries="@array/tipoCarro" />-->

                <RadioGroup
                    android:id="@+id/radioCambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/automatico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:checked="true"
                        android:text="Automatico"/>

                    <RadioButton
                        android:id="@+id/Semi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Semi" />

                    <RadioButton
                        android:id="@+id/Manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Manual" />

                </RadioGroup>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#C9C9C9"
                    android:layout_marginTop="65dp"
                    android:id="@+id/linha2"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Descrição:"
                    android:textSize="17dp"
                    android:layout_below="@id/linha2"
                    android:id="@+id/descricaoTitulo"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descricao"
                    android:layout_below="@id/descricaoTitulo"
                    android:hint="Descrição do carro"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fotoCarro"
                    android:layout_width="385dp"
                    android:layout_height="150dp"/>

                <Button
                    android:id="@+id/btnFoto"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:text="enviar foto">

                </Button>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricao"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:id="@+id/CancelarVenda"/>
                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar"
                    android:id="@+id/cadastrar"/>

            </LinearLayout>





        </LinearLayout>

    </LinearLayout>

</ScrollView>